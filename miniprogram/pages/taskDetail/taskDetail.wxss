page{
  /* background-color: #eee; */
}
.title{
  padding: 5rpx;
  width: 750rpx;
  height: 100rpx;
  text-align: center;
  background-color: #fff;
}
.time{
  margin-top: 5rpx;
  color: #ccc;
}
.content{
  background-color: #fff;
  margin-top: 20rpx;
}
.row{
  width: 750rpx;
  /* height: 100rpx; */
  line-height: 80rpx;
  border-bottom: 1px solid #ccc;
  overflow: auto;
}
.left{
  width: 190rpx;
  float: left;
  opacity: 0.5;
}
.right{
  width: 550rpx;
  float: left;
}
.ask{
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 200rpx;
  background-color: #fff;
}
.ask-text{
  width: 600rpx;
  height: 140rpx;
  margin: 10rpx;
  background-color: #eee;
  border-radius: 40rpx;
  padding-left: 20rpx;
  padding-top: 20rpx;
}
.button{
  width: 90rpx;
  height: 50rpx;
  position: absolute;
  bottom: 30rpx;
  right: 15rpx;
  overflow: hidden;
}
.submit{
  width: 90rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
  font-size: small;
  background-color: #f00;
  border-radius: 20rpx;
  padding: 0;
  margin: 0;
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-size: cover;
}
.nickname{
  color: #2590fe;
}
.taskinfo{
  margin-left: 20rpx;
  width: 630rpx;
  overflow: hidden;
  overflow-wrap: break-word;/*自动换行*/
}
.discuss-area{
  margin-top: 20rpx;
  overflow: auto;
}
.time{
  display: block;
  font-size: small;
  opacity: 0.7;
  margin-top: 10rpx;
}
.one-comment{
  border-bottom: 1px dashed #000;
  display: flex;
  /* height: 150rpx; */
}
.copy-btn{
 position: absolute;
 right: 50rpx;
}
.white{
  height: 300rpx;
}