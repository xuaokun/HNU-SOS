.task{
  width:640rpx;
  /* height: 150rpx; */
  overflow: auto;
  border-radius: 30rpx;
  margin-top: 20rpx;
  position: relative;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.3);
}
.task:active{
  opacity: 0.1;
}
.task-detail{
  width: 0;
  height: 0;
  border-left: 5px solid rgba(0, 0, 0, 0);
  border-right: 5px solid transparent;
  border-top: 5px solid #000;
  border-bottom: 5px solid transparent;
  position: absolute;
  top: 15px;
  right: 15px;
}
.detail-active{
  border-top: 5px solid transparent;border-left: 5px solid #000;right: 12px;
}
.task-over{
  position: absolute;
  right: 20rpx;
}
.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-size: cover;
  float: left;
}
.nickname{
  color: #2590fe;
}
.taskinfo{
  margin-left: 20rpx;
  width: 520rpx;
  float: left;
  overflow: hidden;
  overflow-wrap: break-word;/* 自动换行 */
}
.reward{
  position: absolute;
  bottom: 30rpx;
  right: 30rpx;
  border: 1px solid #000;
  padding: 3rpx;
  border-radius: 20rpx;
}
.img-list{
  width: 350rpx;
}
.time{
  font-size: small;
  opacity: 0.7;
  margin-top: 10rpx;
}